<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_stack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"


        android:layout_marginTop="24dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/simpleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:fontFamily="@font/lato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_stack" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/user_email"
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="15dp"
        android:elevation="1in"
        android:fontFamily="@font/lato"
        android:hint="Email or Phone Number"
        android:inputType="textEmailAddress"
        android:outlineAmbientShadowColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleText">

        <TextView

            android:text="Name"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:textSize="24sp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/textColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:background="@color/white"
            android:fontFamily="@font/lato"
            android:text="Bogatyreva Milana"
            android:textColor="#706E6E"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="DuplicateClickableBoundsCheck" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/adress_l"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="15dp"
        android:elevation="1in"
        android:padding="8dp"
        android:fontFamily="@font/lato"
        android:inputType="textEmailAddress"
        android:outlineAmbientShadowColor="@color/green"

        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_l">

    <TextView

        android:text="Adress"
        android:textStyle="bold"
        android:fontFamily="@font/lato"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@color/white"
            android:fontFamily="@font/lato"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Emirates"
            android:textColor="#706E6E"
            android:textSize="20sp"
            android:textStyle="bold" />
      </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/name_l"
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="15dp"
        android:elevation="1in"
        android:fontFamily="@font/lato"
        android:inputType="textEmailAddress"
        android:outlineAmbientShadowColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleText">

        <TextView

            android:text="Name"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:textSize="24sp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:background="@color/white"
            android:fontFamily="@font/lato"
            android:inputType="text"
            android:text="Bogatyreva Milana"
            android:textColor="#706E6E"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:id="@+id/phone_l"
    android:layout_width="370dp"
    android:layout_height="75dp"
    android:layout_marginStart="57dp"
    android:layout_marginTop="40dp"
    android:layout_marginEnd="57dp"
    android:background="@drawable/edit_text_bg"
    android:drawablePadding="15dp"
    android:elevation="1in"
    android:fontFamily="@font/lato"
    android:inputType="textEmailAddress"
    android:outlineAmbientShadowColor="@color/green"
    android:textSize="15sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.515"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/adress_l">

    <TextView

        android:text="Phone"
        android:textStyle="bold"
        android:fontFamily="@font/lato"
        android:textSize="24sp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:background="@color/white"
        android:fontFamily="@font/lato"
        android:inputType="phone"
        android:text="+123456789"
        android:textColor="#706E6E"
        android:textSize="20sp"
        android:textStyle="bold"/>

    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:id="@+id/p_method"
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/edit_text_bg"
        android:elevation="0dp"
        android:drawablePadding="15dp"
        android:inputType="textEmailAddress"
        android:outlineAmbientShadowColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_l">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/lato"
            android:text="Playment Method"
            android:textColor="#706E6E"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wer"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/total_price"
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="15dp"
        android:elevation="0dp"
        android:inputType="textEmailAddress"
        android:orientation="horizontal"
        android:outlineAmbientShadowColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_method">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lato"
            android:text="Total Amount"
            android:textColor="#706E6E"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/lato"
            android:text="$0"
            android:textColor="@color/green"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/place_my_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_bg"
        android:text="Place my Order"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_price" />


</androidx.constraintlayout.widget.ConstraintLayout>